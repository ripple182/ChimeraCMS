<?xml version="1.0" encoding="utf-8" ?>
<SettingGroups>
  <SettingGroup>
    <GroupKey>eCommercePageFlowSettings</GroupKey>
    <UserFriendlyName>eCommerce Page Flow Settings</UserFriendlyName>
    <Description>The settings used to determine which screens to use for the user's flow during order checkout.</Description>
    <ParentCategory>2</ParentCategory>
    <SettingsList>
      <Setting>
        <Key>ViewProductDetailPage</Key>
        <UserFriendlyName>View Product Details Page</UserFriendlyName>
        <Description>The page used whenever the customer wishes to view more details about a product.</Description>
        <Value>BasicView</Value>
        <EntryType>2</EntryType>
        <DataEntryStaticPropertyKey>ViewProductDetailPages</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
      <Setting>
        <Key>ViewShoppingCartPage</Key>
        <UserFriendlyName>View Shopping Cart Page</UserFriendlyName>
        <Description>The page used whenever the customer is viewing their shopping cart.</Description>
        <Value>BasicView</Value>
        <EntryType>2</EntryType>
        <DataEntryStaticPropertyKey>ViewShoppingCartPages</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
      <Setting>
        <Key>FinalizeCheckoutPage</Key>
        <UserFriendlyName>Finalize Checkout Page</UserFriendlyName>
        <Description>The page used whenever the customer is redirected back from PayPal right before they confirm their order.</Description>
        <Value>BasicView</Value>
        <EntryType>2</EntryType>
        <DataEntryStaticPropertyKey>FinalizeCheckoutPages</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
      <Setting>
        <Key>CheckoutFinishedPage</Key>
        <UserFriendlyName>Checkout Finished Page</UserFriendlyName>
        <Description>The page used after a customer successfully completed their order, this is where we thank the customer for their business.</Description>
        <Value>BasicView</Value>
        <EntryType>2</EntryType>
        <DataEntryStaticPropertyKey>CheckoutFinishedPages</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
    </SettingsList>
  </SettingGroup>
</SettingGroups>