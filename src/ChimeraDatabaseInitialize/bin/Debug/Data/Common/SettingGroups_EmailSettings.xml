<?xml version="1.0" encoding="utf-8" ?>
<SettingGroups>
  <SettingGroup>
    <GroupKey>EmailSettings</GroupKey>
    <UserFriendlyName>Email Settings</UserFriendlyName>
    <Description>Settings used to determine which emails to use for which functions and if only specific admin users get the emails.</Description>
    <ParentCategory>3</ParentCategory>
    <SettingsList>
      <Setting>
        <Key>SenderEmailAddress</Key>
        <UserFriendlyName>Sender Email Address</UserFriendlyName>
        <Description>The email address used whenever sending emails.</Description>
        <Value>no_response@chrisripple.com</Value>
        <EntryType>1</EntryType>
        <DataEntryStaticPropertyKey>OrderFinishedCustomerEmailTypes</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
      <Setting>
        <Key>CustomerOrderFinishedEmail</Key>
        <UserFriendlyName>Order Finished Email</UserFriendlyName>
        <Description>The email template used that is sent to a customer whenever a new order is placed.</Description>
        <Value>BasicView</Value>
        <EntryType>2</EntryType>
        <DataEntryStaticPropertyKey>OrderFinishedCustomerEmailTypes</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
      <Setting>
        <Key>NewOrderEmailAdminUsers</Key>
        <UserFriendlyName>New Order Email Admin Users</UserFriendlyName>
        <Description>Select the checkboxes of the admin users that should receive the "new order placed" email.</Description>
        <Value></Value>
        <EntryType>7</EntryType>
        <DataEntryStaticPropertyKey></DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
      <Setting>
        <Key>CustomerOrderShippedEmail</Key>
        <UserFriendlyName>Order Shipped Email</UserFriendlyName>
        <Description>The email template used that is sent to a customer whenever a order ships.</Description>
        <Value>BasicView</Value>
        <EntryType>2</EntryType>
        <DataEntryStaticPropertyKey>CustomerOrderShippedEmailTypes</DataEntryStaticPropertyKey>
        <SettingAttributeList></SettingAttributeList>
      </Setting>
    </SettingsList>
  </SettingGroup>
</SettingGroups>